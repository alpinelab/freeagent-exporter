= render partial: "year_switcher"

%h1
  = "Archives #{@year}"
  = render partial: "account_switcher"

.row
  %table.table.table-hover
    %thead
      %th Month
      %th Status
      %th Action
    %tbody
    - @archives.each do |archive|
      %tr{}
        %td= Date::MONTHNAMES[archive.month]
        %td= archive.current_state
        %td= archive_action_link(archive)
