- if current_user.bank_accounts.count > 1
  .btn-group
    %button.btn.btn-default{type: "button"}= @account.name
    %button.btn.btn-default.dropdown-toggle{type: "button", data: {toggle: "dropdown"}}
      %span.caret
    %ul.dropdown-menu
      - current_user.bank_accounts.each do |account|
        %li= link_to account.name, archives_url(account: account.id)
