%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %a.navbar-brand{href: root_path}
        = image_tag "freeagent-exporter.png", alt: "FreeAgent Exporter"
        FreeAgent Exporter
    %ul.nav.navbar-nav.navbar-right
      - if current_user.nil?
        %li= link_to "Sign in with FreeAgent", user_omniauth_authorize_path(:freeagent)
      - else
        %li.dropdown.userbox
          %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}, role: "button"}
            = gravatar_image_tag current_user.email, alt: current_user.email, gravatar: {size: 32, secure: true}
            = current_user.email
            %span.caret
          %ul.dropdown-menu{role: "menu"}
            %li= link_to "Sign out",  destroy_user_session_path, method: :delete
